.overflow-y::-webkit-scrollbar,.right-table-content::-webkit-scrollbar,.show-hide-box::-webkit-scrollbar
{
  width:5px;
  height: 6px;
  background-color: #F5F5F5;
}
.overflow-y::-webkit-scrollbar-track,.right-table-content::-webkit-scrollbar-track,.show-hide-box::-webkit-scrollbar-track
{
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  border-radius: 10px;
  background-color: #F5F5F5;
}

.overflow-y::-webkit-scrollbar-thumb,.right-table-content::-webkit-scrollbar-thumb,.show-hide-box::-webkit-scrollbar-thumb
{
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
  background-color: #999;
}

